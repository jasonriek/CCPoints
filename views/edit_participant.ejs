<%- include("partials/_header") -%>
<hr />
<h1>Edit Participant</h1>
<hr />

<form action="/edit_participant" method="post">
  <div class="form-horizontal">

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="NAME">Name</label>
    <div class="col-sm-7">
      <input autofocus class="form-control" name="NAME" value="<%= model.NAME %>" autocomplete="off" required />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="PLAYER_ID">Phone Number</label>
    <div class="col-sm-7">
      <input class="form-control" name="PHONE_NUMBER" value="<%= model.PHONE_NUMBER %>" autocomplete="off" required />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="EMAIL">Email</label>
    <div class="col-sm-7">
      <input class="form-control" name="EMAIL" value="<%= model.EMAIL %>" autocomplete="off" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="POINTS">Points</label>
    <div class="col-sm-7">
      <input readonly class="form-control" name="POINTS" value="<%= model.POINTS %>" autocomplete="off" />
    </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2"></label>
  <div class="col-sm-10">
    <input type="submit" value="Update" class="btn btn-default btn-warning" />
    <a class="btn btn-outline-dark cancel" href="/participants">Cancel</a>
  </div>
</div>

</div>
</form>

<%- include("partials/_footer") -%>