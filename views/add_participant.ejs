<%- include("partials/_header.ejs") -%>
<hr />
<h1>Add New Participant</h1>
<hr />

<form action="/add_participant" method="post">
  <div class="form-horizontal">

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="NAME">Name</label>
    <div class="col-sm-7">
      <input autofocus class="form-control" name="NAME" value="" autocomplete="off" required />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="PLAYER_ID">Phone Number</label>
    <div class="col-sm-7">
      <input class="form-control" name="PHONE_NUMBER" value="" autocomplete="off" required />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="EMAIL">Email</label>
    <div class="col-sm-7">
      <input class="form-control" name="EMAIL" value="" autocomplete="off" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="POINTS">Points</label>
    <div class="col-sm-7">
      <input class="form-control" name="POINTS" value="" autocomplete="off" required/>
    </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2"></label>
  <div class="col-sm-10">
    <input type="submit" value="Save" class="btn btn-default btn-success" />
    <a class="btn btn-outline-dark cancel" href="/participants">Cancel</a>
  </div>
</div>

</div>
</form>

<%- include("partials/_footer") -%>