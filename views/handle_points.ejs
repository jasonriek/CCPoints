<%- include("partials/_header") -%>
<hr />
<% if(page === "points") { %>
  <h1>Add Points - (<%= model.NAME %>)</h1>
<% } else { %>
  <h1>Redeem Points - (<%= model.NAME %>)</h1>
<% } %>
<hr />
<% if(page === "points") { %>
  <form action="/add_points/<%= model.PHONE_NUMBER %>" method="post">
<% } else { %>
  <form action="/redeem_points/<%= model.PHONE_NUMBER %>" method="post">
<% } %>
  <div class="form-horizontal">

    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="POINTS">Points</label>
      <div class="col-sm-7">
        <input class="form-control" name="POINTS" id="p" value="" required />
      </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="PHONE_NUMBER">Phone Number</label>
        <div class="col-sm-7">
          <input readonly class="form-control" name="PHONE_NUMBER" value="<%= model.PHONE_NUMBER %>" />
        </div>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <% if(page === "points") { %>
          <input type="submit" value="Add" class="btn btn-default btn-success"/>
        <% } else { %>
          <input type="submit" value="Redeem" class="btn btn-default btn-warning"/>
        <% } %>
        <a class="btn btn-outline-dark cancel" href="/points/<%= model.PHONE_NUMBER %>">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("partials/_footer") -%>